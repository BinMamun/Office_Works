@model IEnumerable<SchoolManagement.Domain.Entities.Student>

@{
    ViewData["Title"] = "Students";
}

<h2>Students</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.DateOfBirth.ToString("dd-mm-yyyy")</td>
                <td>@student.PhoneNumber</td>
                <td>@student.Address</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@student.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


