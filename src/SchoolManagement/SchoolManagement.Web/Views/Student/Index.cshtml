@model IEnumerable<SchoolManagement.Domain.Entities.Student>

@{
    ViewData["Title"] = "Students";
}

<h1>Students</h1>

<a asp-action="Add" class="btn btn-primary mb-3">Add Student</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date Of Birth</th>
            <th>Address</th>
            <th>Phone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.DateOfBirth.ToShortDateString()</td>
            <td>@item.Address</td>
            <td>@item.PhoneNumber</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>


